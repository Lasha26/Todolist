@model Do

<div class="panel panel-primary">
    <div class="panel-heading @(Model.Status == Statuses.InProgress ? "progres": "")">
        <h3>
            <strong>Event : @Model.Event</strong><input type="checkbox" class="chkCheckBoxId pull-right" value="@Model.Id" /><br /><br />
        </h3>
    </div>
    <div class="panel-body">
        <ul class="list-group">            
            <li class="list-group-item"><h4><strong>Filling Time :</strong></h4><h5>@Model.FillingTime</h5></li>
            <li class="list-group-item"><h4><strong>Ending Time :</strong></h4><h5> @Model.EndingTime</h5></li>
            <li class="list-group-item">
                <h4><strong>Status :</strong> </h4><h5>@Model.Status</h5><div>
                </div>
            </li>
            <li class="list-group-item"><h4><strong>Priority :</strong></h4><h5> @Model.Priority</h5></li>
        </ul>
    </div>
    <div class="btn-toolbar">
        <a href="@Url.Action("Remove", "Do", new { Id = Model.Id })" class="RemoveButton btn btn-danger" data-status="@((int)Model.Status)">
            <strong>Remove</strong>
        </a>
        <a href="@Url.Action("Edit", "Do", new { Id = Model.Id })" class="EditButton btn btn-warning"><strong>Edit</strong></a>
        <a href="@Url.Action("Details", "Do", new { Id = Model.Id })" class="DetailsButton btn btn-success"><strong>Details</strong></a>
    </div>
</div>



